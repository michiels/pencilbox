@import "compass/css3";

body.boxes {
  font-family: sans-serif;
}

body.with_message {
  padding-top: 40px;
}

.not_found {
  margin-top: 100px;
  p {
    line-height: 1.5;
  }
  .picture {
    margin-left: 20%;
    font-size: 150px;
    float: right;
  }
}

@media (max-width: 320px) {
  body .not_found {
    margin-top: 0;
  }
}

@media print {

  body {
    padding-top: 0;
    .branding {
      display: none;
    }
  }
  .highlight pre {
    background-color: #f0f0f0;
  }
  article {
    border-bottom: 0;
  }
}

<%= Pygments.css('.highlight') %>

.branding {
  font-size: 12px; font-family: Donegal One; position: fixed; top: 0; left: 0; right: 0; border-bottom: 1px solid #ccc; background-color: #fff; box-shadow: rgba(0,0,0,0.1) 0 1px 7px;
  color: #555;
  a {
    text-decoration: none;
    color: #111;
  }
  a:hover {
    text-decoration: underline;
  }
  a.cta_to_signup {
    float: right;
    color: #22C5FB;
  }
  a.close_branding_bar {
    float: right;
    margin-left: 20px;
  }
}

.container {
  width: 80%;
  max-width: 960px;
  margin: auto;
}

code {
  background-color: #f0f0f0;
  display: inline-block;
  padding: 0 2px;
}

.highlight {
  overflow-x: auto;
  margin: 2em 0;
  pre {
    padding: 0px 15px;
  }
}

article {
  zoom: 1;
  page-break-after: always;
  border-bottom: 1px solid #f0f0f0;
  padding-bottom: 2em;
  &:last-child {
    page-break-after: auto;
    border-bottom: 0;
  }
  p, ul, ol, h2, h3 {
    max-width: 600px;
    margin: auto;
    line-height: 1.7;
    page-break-inside: never;
    margin-bottom: 1em;
  }
  p {
    // text-indent: 2em;
    &.with_image {
      margin: 2em 0;
      max-width: none;
      text-align: center;
      img {
        max-width: 100%;
        display: inline;
      }
    }
  }

  pre {
    page-break-inside: never;
  }

  h1 {
    font-size: 2.5em;
    font-weight: normal;
    text-align: center;
    a {
      color: #000;
      text-decoration: none;
    }
  }
  h2 {
    font-weight: bold;
  }

  p > img {
    max-width: 100%;
  }
  blockquote {
    max-width: 580px;
    margin: auto;
  }
  iframe {
    display: block;
    margin: 0 auto;
    margin-bottom: 1em;
  }
}

@media (max-width : 320px) {
  body.boxes .branding .container p {
    font-size: 12px;
  }
}

@media (max-width : 480px) {
  .close_branding_bar {
    font-size: 20px;
    margin: 0px 5px 5px 5px;
    line-height: 1em;
  }
  body.boxes .branding {
    font-size: 8px;
    p {
      margin: 5px 10px;
    }
    a.cta_to_signup {
    margin: 5px 0px;
    font-size: 9px;
  }
  }
  body.boxes.with_message {
    padding-top: 60px;
  }
  .container {
    width: 95%;
  }
  article h1 {
    font-size: 24px;
    text-align: left;
  }
}