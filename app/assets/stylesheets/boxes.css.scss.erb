body {
  font-family: sans-serif;
  padding-top: 40px;
}

@media print {
  body {
    // font-family: serif;
  }
  .highlight pre {
    background-color: #f0f0f0;
  }
  article {
    border-bottom: 0;
  }
}

<%= Pygments.css('.highlight') %>

.branding {
  font-size: 12px; font-family: Donegal One; position: fixed; top: 0; left: 0; right: 0; border-bottom: 1px solid #ccc; background-color: #fff; box-shadow: rgba(0,0,0,0.1) 0 1px 7px;
  color: #555;
  a {
    text-decoration: none;
    color: #111;
  }
  a:hover {
    text-decoration: underline;
  }
  a.close_branding_bar {
    float: right;
    margin-left: 20px;
  }
}

.container {
  width: 80%;
  max-width: 960px;
  margin: auto;
}

code {
  background-color: #f0f0f0;
  display: inline-block;
  padding: 0 2px;
}

.highlight {
  zoom: 1;
  pre {
    padding: 10px;
  }
}

article {
  page-break-after: always;
  border-bottom: 1px solid #f0f0f0;
  padding-bottom: 2em;
  &:last-child {
    page-break-after: auto;
    border-bottom: 0;
  }
  p, ul, ol, h2, h3 {
    max-width: 600px;
    margin: auto;
    line-height: 1.7;
    page-break-inside: never;
    margin-bottom: 1em;
  }
  p {
    // text-indent: 2em;
    &.with_image {
      margin: 2em 0;
      max-width: 100%;
    }
  }

  pre {
    margin: 2em 0;
    page-break-inside: never;
  }

  h1 {
    font-size: 2.5em;
    font-weight: normal;
    text-align: center;
  }
  h2 {
    font-weight: bold;
  }

  p > img {
    max-width: 100%;
  }
}

@media (max-width : 500px) {
  .close_branding_bar {
    font-size: 26px;
  }
  body {
    padding-top: 60px;
  }
  .container {
    width: 95%;
  }
  article h1 {
    font-size: 24px;
    text-align: left;
  }
}