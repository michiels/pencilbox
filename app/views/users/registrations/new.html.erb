<div class="signup_box">

  <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "new_user form-inline" } do |f| %>

    <h1>Almost done</h1>

    <div class="control-group username <%= "error" if resource.errors[:username].any? %>">
      <%= f.label :username, "Choose a Pencilbox address, enter your account details and you are good to go. " %>

      <div class="controls">
        <div class="input-prepend">
          <span class="add-on">http://pencilbox.es/</span>
          <%= f.text_field :username, placeholder: "username" %>
        </div>
        <div class="help-block">
          <% if resource.errors[:username].any? %>
          Your Pencilbox address <%= resource.errors[:username].first %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="account_details">

      <div class="control-group">
        <div class="controls">
          <%= f.email_field :email, placeholder: "Your email" %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= f.password_field :password, placeholder: "Choose a password" %>
        </div>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <%= f.submit "Create my Pencilbox account", class: "btn-inverse btn-large btn" %>
      </div>
    </div>

  <% end %>

</div>